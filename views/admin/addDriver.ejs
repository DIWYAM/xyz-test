<% include ../partials/header %>
<% include ../partials/sidebar %>

<div class="content">
        <div class="row">
            <div class="col-md-12">
              <div class="card">
                <div class="card-header">
                  <h5>Driver</h5>
                </div>
                <div class="card-body">
                  <div class="nav-tabs-navigation">
                    <div class="nav-tabs-wrapper">
                      <ul id="tabs" class="nav nav-tabs" role="tablist">
                        <li class="nav-item">
                          <a class="nav-link active" data-toggle="tab" href="#addDriver" role="tab" aria-expanded="true">Add Driver</a>
                        </li>
                        <li class="nav-item">
                          <a class="nav-link" data-toggle="tab" href="#validateDriver" role="tab" aria-expanded="false">Validate Driver</a>
                        </li>
                      </ul>
                    </div>
                  </div>
                  <% include ../partials/message %>
                  <div id="my-tab-content" class="tab-content text-center">
                    <div class="tab-pane active" id="addDriver" role="tabpanel" aria-expanded="true">
                        <div class="col-md-12">
                            <div class="card ">
                            <div class="card-header">
                                <h4 class="card-title">Add Driver</h4>
                            </div>
                            <div class="card-body ">
                                <form class="form-horizontal" method="POST" action="/admin/addDriver" enctype="multipart/form-data">
                                    <div class="row">
                                        <label class="col-sm-2 col-form-label">Transporter</label>
                                        <select class="selectpicker col-sm-5" name="trans" data-style="btn btn-info btn-round" title="Choose Transporter">
                                            <%for(var i = 0; i<trans.length ; i++) {%>
                                                <option value="<%= trans[i].id %>" name="trans"><%= trans[i].name %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Name</label>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <input type="text" name="name" class="form-control" placeholder="Name" required>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">State</label>
                                        <select class="selectpicker col-sm-5" name="state" data-style="btn btn-info btn-round" title="Choose City">
                                            <%for(var i = 0; i<city.length ; i++) {%>
                                                <option value="<%= city[i].state %>" name="state"><%= city[i].state %></option>
                                            <% } %>
                                        </select>
                                    </div>
                                    <div class="row">
                                            <label class="col-md-3 col-form-label">City</label>
                                            <select class="selectpicker col-sm-5" name="city" data-style="btn btn-info btn-round" title="Choose City">
                                                <%for(var i = 0; i<city.length ; i++) {%>
                                                    <option value="<%= city[i].city %>" name="city"><%= city[i].city %></option>
                                                <% } %>
                                            </select>
                                        </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Birthday</label>
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="date" class="form-control" name="birthday" placeholder="Birthday" required>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Mobile No.</label>
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="text" class="form-control" name="phn" placeholder="Mobile Number" required>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <label class="col-md-3 col-form-label">Password</label>
                                        <div class="col-md-6">
                                        <div class="form-group">
                                            <input type="password" name="password" class="form-control" placeholder="Password" required>
                                        </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-md-3 col-sm-3">
                                          <h4 class="card-title">Profile Pic</h4><br><br>
                                          <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail">
                                              <img src="/img/image_placeholder.jpg" alt="...">
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                            <div>
                                              <span class="btn btn-rose btn-round btn-file">
                                                <span class="fileinput-new">Select image</span>
                                                <span class="fileinput-exists">Change</span>
                                                <input type="file" name="prof_pic" required />
                                              </span>
                                              <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                            </div>
                                          </div>
                                        </div>
                                        <div class="col-md-3 col-sm-3">
                                            <h4 class="card-title">Driver's License Front Pic</h4>
                                            <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                              <div class="fileinput-new thumbnail">
                                                <img src="/img/image_placeholder.jpg" alt="...">
                                              </div>
                                              <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                              <div>
                                                <span class="btn btn-rose btn-round btn-file">
                                                  <span class="fileinput-new">Select image</span>
                                                  <span class="fileinput-exists">Change</span>
                                                  <input type="file" name="dl_pic_front" required />
                                                </span>
                                                 <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                              </div>
                                            </div>
                                        </div>
                                        <div class="col-md-3 col-sm-3">
                                          <h4 class="card-title">Driver's License Back Pic</h4>
                                          <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail">
                                              <img src="/img/image_placeholder.jpg" alt="...">
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                            <div>
                                              <span class="btn btn-rose btn-round btn-file">
                                                <span class="fileinput-new">Select image</span>
                                                <span class="fileinput-exists">Change</span>
                                                <input type="file" name="dl_pic_back" required/>
                                              </span>
                                              <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                            </div>
                                          </div>
                                        </div>
                                        <div class="col-md-3 col-sm-3">
                                          <h4 class="card-title">Aadhar</h4><br><br>
                                          <div class="fileinput fileinput-new text-center" data-provides="fileinput">
                                            <div class="fileinput-new thumbnail">
                                              <img src="/img/image_placeholder.jpg" alt="...">
                                            </div>
                                            <div class="fileinput-preview fileinput-exists thumbnail"></div>
                                            <div>
                                              <span class="btn btn-rose btn-round btn-file">
                                                <span class="fileinput-new">Select image</span>
                                                <span class="fileinput-exists">Change</span>
                                                <input type="file" name="aadhar_front_pic" required/>
                                              </span>
                                              <a href="#" class="btn btn-danger btn-round fileinput-exists" data-dismiss="fileinput"><i class="fa fa-times"></i> Remove</a>
                                            </div>
                                          </div>
                                        </div>
                                        </div>
                                    <div class="card-footer ">
                                        <div class="row">
                                        <label class="col-md-6"></label>
                                        <div class="col-md-9">
                                            <button type="submit" class="btn btn-info btn-round">Add</button>
                                        </div>
                                        </div>
                                    </div>
                                </form>
                            </div>
                            </div>
                        </div>
                    </div>
                    <div class="tab-pane" id="validateDriver" role="tabpanel" aria-expanded="false">
                        <div class="col-md-12">
                            <div class="card">
                            <div class="card-header">
                                <h4 class="card-title"> Driver</h4>
                            </div>
                            <div class="card-body">
                                <div class="table-responsive">
                                <table class="table">
                                    <thead class="text-primary">
                                    <th>
                                        Name
                                    </th>
                                    <th>
                                        State
                                    </th>
                                    <th>
                                        City
                                    </th>
                                    <th>
                                        Mobile Number
                                    </th>
                                    <th>
                                        Transporter name
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                    </thead>
                                    <tbody>
                                        <% for(var i = 0; i<driver.length ; i++) {%>
                                        <tr>
                                            <td>
                                            <%= driver[i].d_name %>
                                            </td>
                                            <td>
                                            <%= driver[i].state %>
                                            </td>
                                            <td>
                                            <%= driver[i].city %>
                                            </td>
                                            <td>
                                            <%= driver[i].mob %>
                                            </td>
                                            <td>
                                            <%= driver[i].name %>
                                            </td>
                                            <td>
                                            <% if(driver[i].add_by==0){%>
                                            Added From Dashboard
                                            <%}
                                            else{%>
                                            Added From APP
                                            <%}%>
                                            </td>
                                        </tr>
                                    <% } %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>


<% include ../partials/footer %>
<script src="/js/typeahead.bundle.js"></script>

<script type="text/javascript">
    var city = new Bloodhound({
      datumTokenizer: Bloodhound.tokenizers.obj.whitespace('city'),
      queryTokenizer: Bloodhound.tokenizers.whitespace,
    //   prefetch: '/admin/search?key=%QUERY',
      remote: {
        url: '/admin/search?key=%QUERY',
        // transform: function (data) {
        // return data.response;
        // },
        wildcard: '%QUERY'
      }
    });
    
    $('#city').typeahead(null, {
      name: 'city',
      valueKey: 'city',
        //display: 'city',
        //displayKey:'city',
        displayKey: function (obj) {
            if(obj==null){
                console.log('Here');
            }
            else{
                return obj;
            }
    
        },
      source: city
    });
</script>